{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ESP32-C3 Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/esp32_c3_ble.elf",
            "MIMode": "gdb",
            "miDebuggerPath": "/opt/esp/tools/riscv32-esp-elf-gdb/16.3_20250913/riscv32-esp-elf-gdb/bin/riscv32-esp-elf-gdb",
            "setupCommands": [
                { "text": "set remote hardware-watchpoint-limit 2" },
                { "text": "set remotetimeout 10" },
                { "text": "shell ${workspaceFolder}/.vscode/start-openocd.sh" }
            ],
            "miDebuggerServerAddress": "localhost:3333",
            "postRemoteConnectCommands": [
                { "text": "mon reset halt" },
                { "text": "maintenance flush register-cache" },
                { "text": "thb app_main" }
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}
